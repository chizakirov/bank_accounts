@model Transaction

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Document</title>
</head>
<body>
    <h1>Welcome, @TempData["name"]!</h1>
    <a href = "/logout">Logout</a>
    <hr>
    <h3>Current Balance: $@TempData["balance"]</h3>
    <form asp-action="PostTransaction" asp-controller="Home" method="post">
        <span class="text-danger" asp-validation-for="Amount"></span>
        <label asp-for="Amount">Deposit/Withdraw</label>
        <input type="number" step="0.01" asp-for="Amount">
        <input type = "submit" value = "Submit">
    </form>
    @{
        foreach(var t in @ViewBag.transactions){
            <p>@t.Amount.ToString("0.##")</p>
            <p>@t.CreatedAt.ToString("MMMM dd, yyyy")</p>
        }
    }
</body>
</html>